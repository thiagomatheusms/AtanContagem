<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registra_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.atan.atancontagem.Registros.RegistraAppActivity"
    android:background="@drawable/fundo_app_10">

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/logo_a1"
        android:id="@+id/imageView13"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp" />

    <ProgressBar
        android:id="@+id/appAtivacao_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:indeterminate="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="CÓDIGO DE ATIVAÇÃO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textStyle="normal|bold|italic"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:inputType="textCapCharacters"
            android:fontFamily="sans-serif-condensed" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/t_cod_chave"
            android:hint="XXXXXXXX"
            android:inputType="number"
            android:textSize="30sp"
            android:textAlignment="center"
            android:maxLength="8"
            android:textStyle="normal|bold"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed" />


    </LinearLayout>

    <Button
        android:text="ATIVAR"
        android:layout_width="match_parent"
        android:id="@+id/btn_validarApp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-condensed" />

</LinearLayout>
