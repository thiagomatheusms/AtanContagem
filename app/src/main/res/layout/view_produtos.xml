<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordas_arredondadas">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/header"
            android:layout_row="0"
            android:background="@drawable/bordas_arredondadas_header"
            android:gravity="top"
            android:layout_height="40dp">

            <TextView
                android:text="CÓDIGO:"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginStart="10dp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:text="999999"
                android:textSize="15sp"
                android:id="@+id/t_view_produtos_codigo_produto"

                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="50dp"
            android:background="@drawable/bordas_retangular_body">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="PRODUTO"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/t_view_produtos_nome_produto"
                tools:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="REF."
                android:textSize="13sp"
                android:id="@+id/t_view_produtos_ref_produto"
                android:textStyle="normal|bold|italic"
                android:textColor="@android:color/holo_blue_dark"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Código Ean-13"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView3"
                android:textSize="12sp"
                android:textStyle="normal|bold|italic"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/t_view_produtos_COD_EAN13"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:textStyle="normal|bold"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESTOQUE (SISTEMA):"
                android:id="@+id/textView4"
                android:textSize="12sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:text="0,00"
                android:id="@+id/t_view_produtos_QTD_SISTEMA"
                android:textSize="12sp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0">

            <TextView
                android:text="ESTOQUE (-):"
                android:id="@+id/textView5"
                android:textSize="12sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:text="0,00"
                android:id="@+id/t_view_produtos_QTD_NEGATIVA"
                android:textSize="12sp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:visibility="invisible"
            android:layout_marginBottom="5dp">

            <TextView
                android:text="CONTAGEM ATUAL:"
                android:id="@+id/textView6"
                android:textSize="15sp"
                android:textStyle="normal|bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:text="0,00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t_view_produtos_QTD_CONTAGEM_ATUAL"
                android:textSize="15sp"
                android:gravity="right"
                android:textStyle="normal|bold"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed" />
        </LinearLayout>

    </GridLayout>

